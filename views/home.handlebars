        </select>
        <input type="url" 
               name="url"
               placeholder="URL" 
               size = 42 
               style="position: absolute;left: 100px;top: 370px;">             

        <input type="submit" 
               name="submit"
               value="Finish" 
               style = "position: absolute;left: 100px;top: 420px;" >

    </form>  