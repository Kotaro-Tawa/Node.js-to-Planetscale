    <form action = "/" method="post">  
        <h1>Share restaurant information</h1>
        <input type="text" 
               name="name"
               placeholder="The name of restaurant" 
               size = 40 
               style = "position: absolute;left: 100px;top: 150px;">
        <input type="text" 
               name="address"
               placeholder="Address" 
               size = 40 
               style = "position: absolute;left: 100px;top: 200px;">
        <input type="text" 
               name="type"
               placeholder="The type of dish" 
               size = 40 
               style = "position: absolute;left: 100px;top: 250px;">
        <input type="text" 
               name="bestdish"
               placeholder="Your best dish" 
               size = 40 
               style = "position: absolute;left: 100px;top: 300px;">
